<odoo>
    <data>
        <record id="invoice_gstrb2cl_wizard_form" model="ir.ui.view">
            <field name="name">GSTR1 B2CL Report</field>
            <field name="model">invoice.report.gstb2cl.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <field invisible="1" name="state"/>
                    <div states="choose">
                        <group>
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>

                        </group>
                    </div>
                    <div states="get">
                        <group>
                            <field name="name" colspan="4" invisible="1"/>
                            <field name="report" filename="name" colspan="4"/>
                        </group>
                    </div>
                    <footer states="choose">
                        <button name="generate_gstrsale_report" string="Generate B2CL" type="object"
                                class="oe_highlight"/>
                        <button special="cancel" string="Cancel" class="oe_highlight"/>
                    </footer>
                    <footer states="get">
                        <button special="cancel" string="Cancel" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_gstrb2cl_report" model="ir.actions.act_window">
            <field name="name">GSTR1 B2CL Report</field>
            <field name="res_model">invoice.report.gstb2cl.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="invoice_gstrb2cl_wizard_form"/>
            <field name="target">new</field>
        </record>

        <menuitem id="account_report_gstrb2cl" name="GSTR1 B2CL"
                  parent="menu_gst_reports" action="action_gstrb2cl_report"
                  sequence="2" groups="account.group_account_manager"/>

    </data>
</odoo>